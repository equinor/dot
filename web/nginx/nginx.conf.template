worker_processes 1;

events { worker_connections 1024; }

http {
    sendfile on;
    include /etc/nginx/mime.types;
    server {
        listen 3000;

        root /app/www/;
        index index.html;

        location / {
            try_files $uri /index.html;
        }
        location /api/ {
            proxy_pass ${REACT_APP_API_BASE_URL};
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            
        }
    }
}