worker_processes 1;

events { worker_connections 1024; }

http {
    sendfile on;
    include /etc/nginx/mime.types;
    server {
        listen 3000;

        root /usr/share/nginx/html;
        index index.html;

        location / {
            try_files $uri /index.html;
        }
        location /api/ {
            proxy_pass ${REACT_APP_API_BASE_URL};
        }
    }
}